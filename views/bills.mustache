<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/css/bootstrap-theme.min.css">
    <title>{{app_title}}</title>
  </head>
  <body>
    <div class="container">
      <h1>{{app_title}}</h1>
      <h2>{{current_user.full_name}}</h2>
      <div class="btn-group" role="group" aria-label="Basic example">
        <a class="btn btn-info btn-lg" href="/bill">Uusi lasku</a>
        {{#admin}}
        <div class="btn-group">
          <button class="btn btn-info btn-lg dropdown-toggle" type="button" data-toggle="dropdown">Raportit <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="/report/income-statement">Tuloslaskelma</a></li>
            <li><a href="/report/income-statement-detailed">Tuloslaskelma erittelyin</a></li>
            <li><a href="/report/balance-sheet">Tase</a></li>
            <li><a href="/report/balance-sheet-detailed">Tase erittelyin</a></li>
            <li><a href="/report/general-journal">P채iv채kirja</a></li>
            <li><a href="/report/general-ledger">P채채kirja</a></li>
            <li><a href="/report/chart-of-accounts">Tilikartta</a></li>
            <li class="divider"></li>
            <li><a href="/report/massikone.zip">Kaikki zip-tiedostona&hellip;</a></li>
            <li class="divider"></li>
            <li><a href="/compare">Vertaa tiliotteeseen&hellip;</a></li>
          </ul>
        </div>
        {{/admin}}
        <button type="button" class="btn btn-info btn-lg" id="logout-button">Kirjaudu ulos</button>
      </div>
      <form id="logout-form" method="POST" action="/logout" style="display: none"></form>
      {{^bills}}
      <p>Ei laskuja</p>
      {{/bills}}
      {{#bills}}
      <h2>Kulut</h2>
      <div class="well">
        <div class="btn-group" data-toggle="buttons">
          {{#admin}}
          {{#users}}
          <label class="btn btn-success active">
            <input type="checkbox" value="{{user_id}}" checked> {{short_name}}
          </label>
          {{/users}}
          {{/admin}}
        </div>
      </div>
      <table class="table table-striped table-hover">
              <tr>
                <th>Kulu</th>
                <th class="text-right">Pvm</th>
                <th class="text-right">&euro;</th>
                {{#admin}}
                <th>Maksaja</th>
                {{/admin}}
                <th>Kuvaus</th>
                <th></th>
              </tr>
              {{#bills}}
              <tr class="clickable-row" data-href="/bill/{{bill_id}}" style="cursor: pointer">
                <td><a class="btn btn-default" href="/bill/{{bill_id}}">{{bill_id}}</a></td>
                <td class="text-right">{{paid_date_fi}}</td>
                <td class="text-right">{{amount}}</td>
                {{#admin}}
                <td>{{paid_user_full_name}}</td>
                {{/admin}}
                <td>{{description}}</td>
                <td>
            {{#image_missing}}
            <span class="glyphicon glyphicon-paperclip"
                  title="Kuva puuttuu"></span>
            {{/image_missing}}
          </td>
              </tr>
              {{/bills}}
      </table>
      {{/bills}}
    </div>
    <script src="/static/js/jquery.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/bills.js"></script>
  </body>
</html>
